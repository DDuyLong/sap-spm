<core:FragmentDefinition xmlns:form="sap.ui.layout.form"
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
>
    <Dialog
        id="addRow"
        title="Add row"
    >
        <content>
            <form:SimpleForm
                id="dialogContent"
                editable="true"
                layout="ResponsiveGridLayout"
                singleContainerFullSize="false"
                width="500px"
            >
                <Label text="Mã PR" />
                <Input
                    id="inputPR"
                    placeholder="Mã PR"
                    required="true"
                />
                <Label id="inputPRError" text="" visible="false" class="errorLabel" />
                <Label text="Delete ID" />
                <Select
                    id="DeleteID"
                    width="100%"
                    items="{
                        path: '/deleteID',
                        sorter: { path: 'Name' }
                    }"
                >
                    <core:Item
                        key="{key}"
                        text="{value}"
                    />
                </Select>
                
                <Label text="Số lượng" />
                <Input
                    id="inputSl"
                    placeholder="số lượng"
                    type="Number"
                    required="true"

                />
                <Label id="inputSlError" text="" visible="false" class="errorLabel" />
                <Label text="Nhà máy" />
                <Input
                    id="inputnhaMay"
                    placeholder="Nha máy"
                    required="true"

                />
                 <Label id="inputNhaMayError" text="" visible="false" class="errorLabel" />
                <Label text="Mã PO" />
                <Input
                    id="inputMaPO"
                    placeholder="Mã PO"
                    required="true"

                />
                 <Label id="inputMaPOError" text="" visible="false" class="errorLabel" />
                <Label text="Ngày cập nhật" />
                <DatePicker
                    id="ngayCapNhat"
                    placeholder="ngày cập nhật"
                    required="true"

                />
                <Label id="ngayCapNhatError" text="" visible="false" class="errorLabel" />
            </form:SimpleForm>
        </content>
        <beginButton>
            <Button
                text="Save"
                press=".onSave"
                type="Emphasized"
            />
        </beginButton>
        <endButton>
            <Button
                text="Cancel"
                press=".onCloseDialog"
                type="Reject"
            />
        </endButton>
    </Dialog>
</core:FragmentDefinition>
